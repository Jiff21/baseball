{
  "name": "fantasy-baseball-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Fantasy Baseball application using Playwright and Cucumber",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register --require features/step_definitions/fantasy_baseball_steps.ts --require features/support/world.ts --require features/support/hooks.ts",
    "test:headed": "cucumber-js --require-module ts-node/register --require features/step_definitions/fantasy_baseball_steps.ts --require features/support/world.ts --require features/support/hooks.ts --tags '@headed'",
    "test:debug": "cucumber-js --require-module ts-node/register --require features/step_definitions/fantasy_baseball_steps.ts --require features/support/world.ts --require features/support/hooks.ts --tags '@debug'",
    "test:typescript": "cucumber-js --require-module ts-node/register --require features/step_definitions/fantasy_baseball_steps.ts --require features/support/world.ts --require features/support/hooks.ts --tags '@typescript'",
    "install-browsers": "playwright install",
    "report": "allure serve allure-results"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "allure-cucumberjs": "^2.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  }
}
