{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "features/**/*",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

